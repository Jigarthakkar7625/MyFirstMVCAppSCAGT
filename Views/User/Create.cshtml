@model MyFirstMVCAppSCAGT.Models.UserDemo


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";


}




@foreach (var item in (IEnumerable<MyFirstMVCAppSCAGT.Student>)ViewData["UserList"]){

    <tr>
        <td>
            @item.StudentId
        </td>
        <td>
            @item.StudentName
        </td>
    </tr>

}



@using (Html.BeginForm("Create", "User", new { UserId = 12, CompanyId = 10 }, FormMethod.Post, new { @class = "Customclass" }))

{

    @*@ViewBag.UserName

    <br />

    @ViewBag.UserId

<br />

    @ViewBag.Employee*@


    <h2>Create</h2>
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })

            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.UserName)
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.EmailId, new { @class = "control-label col-md-2" })

            @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.EmailId)
        </div>



        <div class="form-group">
            @Html.LabelFor(m => m.Age, new { @class = "control-label col-md-2" })

            @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @type = "number" })

            @Html.ValidationMessageFor(m => m.Age)
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })

            @Html.PasswordFor(m => m.Password, new { @class = "form-control"})

            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-2" })

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control"})

            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <input type="file" />


        <div class="form-group">
            @Html.LabelFor(m => m.CountryID, new { @class = "control-label col-md-2" })

            @*@Html.DropDownListFor(m => m.CountryID, new SelectList(Enum.GetValues(typeof(Country)), "Please Select Country "))*@


            @Html.DropDownListFor(m => m.CountryID, new SelectList(ViewBag.UserList, "StudentId", "StudentName"), "Please Select Country ", new { @class = "form-control" })
        </div>
        
        

        <div class="form-group">
            @Html.LabelFor(m => m.IsActive, new { @class = "control-label col-md-2" })


            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender, new { @class = "control-label col-md-2" })


            @Html.RadioButtonFor(m => m.Gender, "Male") MALE
            <br />
            @Html.RadioButtonFor(m => m.Gender, "Female") FEMALE
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <br />

}





